[Unit]
AssertPathExists=path_to_the_script_directory
AssertPathIsDirectory=path_to_the_script_directory
AssertDirectoryNotEmpty=path_to_the_script_directory
AssertPathExists=path_to_the_script_directory/checkIP.sh
AssertFileNotEmpty=path_to_the_script_directory/checkIP.sh
AssertFileIsExecutable=path_to_the_script_directory/checkIP.sh
After=network.target
Description=Service that run the script that checks the public IP of the router

[Service]
ExecStart=checkIP.sh --post true
Restart=on-failure
RestartSec=5s
Type=simple
User=my_user
WorkingDirectory=path_to_the_script_directory
